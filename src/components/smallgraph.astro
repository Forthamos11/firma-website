---
const recentsells = ["22€", "35€", "45€", "55€", "65€", "75€", "85€", "95€", "105€"];
const recentbuys = ["22€", "35€", "45€", "55€", "65€", "75€", "85€", "95€", "105€"];
const response = await fetch("https://67e2ce7297fc65f53537aaed.mockapi.io/api/v1/recentbuys");
const data = await response.json();
const newestpurchase = data[0];
---

<div class="flex justify-center items-center w-auto h-16 bg-[#D9D9D9] m-3 rounded-md text-black">
    <h2>Aktueller Verkauf:</h2>
    {recentsells.map((item, index) => (
        <p class="text-black pl-5">{item}</p>
    ))}
</div>


<div class="flex justify-center items-center w-auto h-16 bg-[#D9D9D9] m-3 rounded-md text-black">
    <h2>Aktuelle Ausgaben:</h2>
    {recentbuys.map((item, index) => (
        <p class="text-black pl-5">{item}</p>
    ))}
</div>

<div class="flex justify-center items-center w-auto h-16 bg-[#D9D9D9] m-3 rounded-md text-black">
    <h2>Neuester Kauf:</h2>
    <p class="text-black pl-5">{newestpurchase.value}</p>
</div>
